# =============================================
# Reddy Anna Andar Bahar Game - Environment Configuration
# =============================================
# Copy this file to .env and update with your actual values

# =============================================
# SERVER CONFIGURATION
# =============================================
NODE_ENV=development
PORT=5000

# =============================================
# WEBSOCKET CONFIGURATION
# =============================================
WEBSOCKET_URL=ws://localhost:5000

# =============================================
# CLIENT CONFIGURATION (VITE)
# =============================================
# Backend API URL for client-side connections
VITE_API_BASE_URL=localhost:5000
VITE_WS_BASE_URL=localhost:5000

# =============================================
# SUPABASE CONFIGURATION
# =============================================
# Get these from your Supabase project settings
# Dashboard -> Settings -> API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =============================================
# DATABASE CONFIGURATION (Optional - if using direct PostgreSQL)
# =============================================
DATABASE_URL=postgresql://username:password@localhost:5432/andar_bahar

# =============================================
# SESSION CONFIGURATION
# =============================================
# Generate a secure random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secret-key-here-change-in-production

# =============================================
# RTMP SERVER CONFIGURATION
# =============================================
RTMP_SERVER_PORT=1935
RTMP_HTTP_PORT=8000
RTMP_APP_NAME=live

# =============================================
# SECURITY CONFIGURATION
# =============================================
# Enable/disable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Maximum login attempts before rate limiting kicks in
MAX_LOGIN_ATTEMPTS=5

# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# =============================================
# GAME CONFIGURATION
# =============================================
# Default game settings (can be overridden in database)
DEFAULT_MIN_BET=1000
DEFAULT_MAX_BET=50000
DEFAULT_TIMER_DURATION=30
DEFAULT_PLAYER_BALANCE=5000000

# =============================================
# LOGGING CONFIGURATION
# =============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable detailed WebSocket logging (true/false)
WS_DEBUG=false
